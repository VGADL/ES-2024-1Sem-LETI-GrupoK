<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="iscteiul.ista.gestaoterritorio.SearchController">
   <children>
      <!-- Menu Bar -->
      <MenuBar layoutY="2.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <menus>
            <Menu mnemonicParsing="false" text="File">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#close" text="Close" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Help">
               <items>
                  <MenuItem mnemonicParsing="false" text="About" />
               </items>
            </Menu>
         </menus>
      </MenuBar>
      <!-- Search Section -->
      <VBox spacing="10" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="30.0">
         <HBox prefHeight="41.0" prefWidth="760.0" spacing="10">
            <TextField fx:id="searchIdField" promptText="Digite o ID do terreno" />
            <Button onAction="#procurarPorID" text="Procurar po Id" />
         </HBox>
      </VBox>

      <!-- ListView Section to display CSV data -->
      <VBox AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="80.0">
         <Button onAction="#showAll" text="Mostrar TUDO" />
         <ListView fx:id="listView" prefHeight="400.0" prefWidth="760.0" />
      </VBox>
      <Button layoutX="680.0" layoutY="521.0" onAction="#goBack" prefWidth="100.0" text="Voltar" />
   </children>
</AnchorPane>

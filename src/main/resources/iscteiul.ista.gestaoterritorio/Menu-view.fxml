<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="iscteiul.ista.gestaoterritorio.GUIController">
    <children>
        <ImageView fitHeight="600.0" fitWidth="800.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <image>
                <Image url="@../images/papaiCris.png" />
            </image>
        </ImageView>

        <VBox alignment="CENTER" spacing="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="50.0" AnchorPane.bottomAnchor="50.0" style="-fx-background-color: rgba(0, 0, 0, 0.7); -fx-padding: 20; -fx-border-radius: 10; -fx-background-radius: 10;">

            <Text style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-fill: white;" text="🌍 Menu Principal" />

            <Button fx:id="searchLandButton" onAction="#procurarTerrenoClick" text="🔍 Procurar Terreno" prefWidth="250.0" style="-fx-font-size: 14px; -fx-text-fill: white; -fx-background-color: #4CAF50; -fx-background-radius: 10;" />
            <Button onAction="#vizualizarGrafoClick" text="📊 Visualizar Grafo de Propriedades" prefWidth="250.0" style="-fx-font-size: 14px; -fx-text-fill: white; -fx-background-color: #2196F3; -fx-background-radius: 10;" />
            <Button onAction="#calcularAreaClick" text="📐 Calcular Área Média" prefWidth="250.0" style="-fx-font-size: 14px; -fx-text-fill: white; -fx-background-color: #673AB7; -fx-background-radius: 10;" />
            <Button onAction="#close" text="❌ Sair" prefWidth="250.0" style="-fx-font-size: 14px; -fx-text-fill: white; -fx-background-color: #F44336; -fx-background-radius: 10;" />
        </VBox>
    </children>
</AnchorPane>
